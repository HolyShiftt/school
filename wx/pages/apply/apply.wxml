<page-meta root-font-size="system" />
<view>
  <view class="weui-form" style="padding:20px 0">
    <view class="weui-form__text-area">
      <h2 class="weui-form__title">出校申请</h2>
    </view>
    <view class="weui-form__control-area" style="margin-top: 20px;margin-bottom: 0;">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells__title">请假事由</view>
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__bd"  bindtap="chooseLocation">
            <input class="weui-input"placeholder-class="weui-input__placeholder"/>
          </view>
        </view>
        <view class="weui-cells__title">交通方式</view>
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__bd"  bindtap="chooseLocation">
            <input class="weui-input"placeholder-class="weui-input__placeholder"/>
          </view>
        </view>
        <view class="weui-cells__title">出行范围</view>
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__bd"  bindtap="chooseLocation">
            <input class="weui-input"placeholder-class="weui-input__placeholder"/>
          </view>
        </view>
        <view class="weui-cells__title">开始时间</view>
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__bd"  bindtap="chooseLocation">
            <input class="weui-input"placeholder-class="weui-input__placeholder"/>
          </view>
        </view>
        <view class="weui-cells__title">结束时间</view>
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__bd"  bindtap="chooseLocation">
            <input class="weui-input"placeholder-class="weui-input__placeholder"/>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <a aria-role="button" class="weui-btn weui-btn_primary" bindtap="report">提交申请</a>
    </view>
  </view>
</view>